<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="space48" translate="label" sortOrder="105">
            <label>Space48</label>
        </tab>
        <section id="space48_quickview" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>QuickView</label>
            <tab>space48</tab>
            <resource>Space48_QuickView::config</resource>
            <group id="general" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Enable or disable QuickView.]]></comment>
                </field>
                <field id="btn_text" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Quick View Button Text</label>
                    <comment><![CDATA[Text shown in quick view button.]]></comment>
                </field>
                <field id="custom_css" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom CSS Styles for Button</label>
                    <comment><![CDATA[Ex.: background-color: DarkOrange.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>